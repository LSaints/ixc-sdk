{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@tests/*": ["tests/*"]
    },
    "types": ["jest"],
    "moduleResolution": "node",
    "target": "ES2015", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "declaration": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*", "tests/**/*"],
}
